<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".charity.DonorDonationDetails">



    <include
        android:id="@+id/donor_donation_details_page"
        layout="@layout/app_bar_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="950dp"
        android:gravity="center"
        android:minHeight="750dp"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:context=".MainActivity"
        tools:ignore="MissingConstraints">


        <TextView
            android:id="@+id/donation_donor_side_food_name"
            android:layout_width="331dp"
            android:layout_height="51dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="16dp"
            android:autofillHints=""
            android:fontFamily="@font/krona_one"
            android:foregroundGravity="center"
            android:gravity="center"
            android:hint="@string/food_name_required"
            android:inputType="number"
            android:maxLength="10"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/donation_donor_side_food_exp_date"
            android:layout_width="331dp"
            android:layout_height="51dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="8dp"
            android:autofillHints=""
            android:fontFamily="@font/krona_one"
            android:foregroundGravity="center"
            android:gravity="center"
            android:hint="Expiry Date (Required) : DD-MM-YYYY"
            android:inputType="date"
            android:maxLength="10"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/donation_donor_side_food_quantity"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/donation_donor_side_food_donation_date"
            android:layout_width="331dp"
            android:layout_height="51dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="8dp"
            android:autofillHints=""
            android:fontFamily="@font/krona_one"
            android:foregroundGravity="center"
            android:gravity="center"
            android:hint="Donation Date (Required) : DD-MM-YYYY"
            android:inputType="date"
            android:maxLength="10"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.487"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/donation_donor_side_food_exp_date"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/donation_donor_side_requirment_items"
            android:layout_width="327dp"
            android:layout_height="173dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="8dp"
            android:autofillHints=""
            android:fontFamily="@font/krona_one"
            android:gravity="center"
            android:hint="Mention Items Here (Required)"
            android:inputType="textImeMultiLine"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textColor="@color/accent"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.416"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/donation_donor_side_requirement_donation_date" />

        <TextView
            android:id="@+id/donation_donor_side_requirement_donation_date"
            android:layout_width="331dp"
            android:layout_height="51dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="16dp"
            android:autofillHints=""
            android:fontFamily="@font/krona_one"
            android:foregroundGravity="center"
            android:gravity="center"
            android:hint="Donation Date (Required) : DD-MM-YYYY"
            android:inputType="date"
            android:maxLength="10"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.45"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="341dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/krona_one"
            android:foregroundGravity="center"
            android:gravity="center"
            android:text="Requirement Donation"
            android:textColor="#52489C"
            android:textSize="30sp"
            android:textStyle="bold"
            android:typeface="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/donation_donor_side_money_purpose" />

        <TextView
            android:id="@+id/donation_donor_side_money_purpose"
            android:layout_width="332dp"
            android:layout_height="189dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="8dp"
            android:autofillHints=""
            android:fontFamily="@font/krona_one"
            android:gravity="center"
            android:hint="For What Purpose ? (Optional)"
            android:inputType="textImeMultiLine"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textColor="@color/accent"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.443"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/donation_donor_side_money_amount" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="341dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/krona_one"
            android:foregroundGravity="center"
            android:gravity="center"
            android:text="Money Donation"
            android:textColor="#52489C"
            android:textSize="30sp"
            android:textStyle="bold"
            android:typeface="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.528"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/donation_donor_side_food_donation_date" />

        <TextView
            android:id="@+id/donation_donor_side_money_amount"
            android:layout_width="331dp"
            android:layout_height="51dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="16dp"
            android:autofillHints=""
            android:fontFamily="@font/krona_one"
            android:foregroundGravity="center"
            android:gravity="center"
            android:hint="Amount (Optional)"
            android:inputType="number"
            android:maxLength="10"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.487"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/donation_donor_side_food_quantity"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="8dp"
            android:autofillHints=""
            android:fontFamily="@font/krona_one"
            android:gravity="center"
            android:hint="Quantity in KG - (Required)"
            android:inputType="number"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textColor="@color/accent"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/donation_donor_side_food_name" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="341dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="52dp"
            android:fontFamily="@font/krona_one"
            android:foregroundGravity="center"
            android:gravity="center"
            android:text="Food Donation"
            android:textColor="#52489C"
            android:textSize="30sp"
            android:textStyle="bold"
            android:typeface="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.557"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>



