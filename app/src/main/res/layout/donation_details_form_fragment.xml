<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="750dp"
    android:orientation="vertical"
    android:layout_gravity="center"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:minHeight="750dp"
        android:padding="10dp"
        android:gravity="center"
        tools:context=".MainActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >


        <EditText
            android:id="@+id/Share_Mobile"
            android:layout_width="331dp"
            android:layout_height="51dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:autofillHints=""
            android:fontFamily="sans-serif-smallcaps"
            android:foregroundGravity="center"
            android:gravity="center"
            android:hint="@string/food_name_required"
            android:inputType="number"
            android:maxLength="10"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textSize="15sp"
            app:layout_constraintBottom_toTopOf="@+id/share_edit_email"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="RtlSymmetry" />

        <EditText
            android:id="@+id/share_Mobile2"
            android:layout_width="331dp"
            android:layout_height="51dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:autofillHints=""
            android:fontFamily="sans-serif-smallcaps"
            android:foregroundGravity="center"
            android:gravity="center"
            android:hint="Expiry Date (Required) : DD-MM-YYYY"
            android:inputType="date"
            android:maxLength="10"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Share_Mobile"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="RtlSymmetry" />

        <EditText
            android:id="@+id/share_Mobile7"
            android:layout_width="331dp"
            android:layout_height="51dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="2dp"
            android:autofillHints=""
            android:fontFamily="sans-serif-smallcaps"
            android:foregroundGravity="center"
            android:gravity="center"
            android:hint="Donation Date (Required) : DD-MM-YYYY"
            android:inputType="date"
            android:maxLength="10"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Share_Mobile"
            app:layout_constraintVertical_bias="0.187"
            tools:ignore="RtlSymmetry" />

        <EditText
            android:id="@+id/share_Mobile8"
            android:layout_width="331dp"
            android:layout_height="51dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:autofillHints=""
            android:fontFamily="sans-serif-smallcaps"
            android:foregroundGravity="center"
            android:gravity="center"
            android:hint="Donation Date (Required) : DD-MM-YYYY"
            android:inputType="date"
            android:maxLength="10"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            app:layout_constraintVertical_bias="0.005"
            tools:ignore="RtlSymmetry" />

        <EditText
            android:id="@+id/share_Mobile3"
            android:layout_width="331dp"
            android:layout_height="51dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="320dp"
            android:autofillHints=""
            android:fontFamily="sans-serif-smallcaps"
            android:foregroundGravity="center"
            android:gravity="center"
            android:hint="Amount (Optional)"
            android:inputType="number"
            android:maxLength="10"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="RtlSymmetry" />

        <EditText
            android:id="@+id/Share_edit_email"
            android:layout_width="332dp"
            android:layout_height="49dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="48dp"
            android:autofillHints=""
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="center"
            android:hint="For What Purpose ? (Optional)"
            android:inputType="textImeMultiLine"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textColor="@color/accent"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/share_Mobile3"
            app:layout_constraintVertical_bias="0.01" />

        <EditText
            android:id="@+id/share_edit_email2"
            android:layout_width="332dp"
            android:layout_height="49dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="48dp"
            android:autofillHints=""
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="center"
            android:hint="Mention Items Here (Required)"
            android:inputType="textImeMultiLine"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textColor="@color/accent"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.506"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/share_Mobile3"
            app:layout_constraintVertical_bias="0.591" />

        <EditText
            android:id="@+id/share_edit_email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:autofillHints=""
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="center"
            android:hint="Quantity in KG - (Required)"
            android:inputType="number"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textColor="@color/accent"
            android:textSize="15sp"
            app:layout_constraintBottom_toTopOf="@+id/share_Mobile2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Share_Mobile" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="341dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="center"
            android:text="@string/donation_details"
            android:textSize="36sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.022" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="341dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:fontFamily="cursive"
            android:foregroundGravity="center"
            android:gravity="center"
            android:text="Food Donation"
            android:textColor="#000000"
            android:textSize="23sp"
            android:textStyle="bold"
            android:typeface="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.116" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="341dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:fontFamily="cursive"
            android:foregroundGravity="center"
            android:gravity="center"
            android:text="Money Donation"
            android:textColor="#000000"
            android:textSize="23sp"
            android:textStyle="bold"
            android:typeface="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.477" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="341dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:fontFamily="cursive"
            android:foregroundGravity="center"
            android:gravity="center"
            android:text="Requirement Donation"
            android:textColor="#000000"
            android:textSize="23sp"
            android:textStyle="bold"
            android:typeface="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.699" />

        <Button
            android:id="@+id/cancelbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#0288D1"
            android:text="Cancel"
            android:textColor="#FFFFFF"
            android:textColorLink="#370A0A"
            app:layout_constraintBottom_toBottomOf="@+id/submitbutton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.109"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/submitbutton"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/submitbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#689F38"
            android:text="Okay"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.809"
            app:layout_constraintStart_toEndOf="@+id/cancelbutton"
            app:layout_constraintTop_toBottomOf="@+id/share_edit_email2"
            app:layout_constraintVertical_bias="0.337" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>