<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00796B"
    tools:context=".donor.RequirementDetailsActivityDonor">

    <include
        android:id="@+id/requirements_details_page_toolbar"
        layout="@layout/app_bar_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/requirements_details_donor"
        android:layout_width="325dp"
        android:layout_height="480dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="#B9FF7B"
        android:gravity="center"
        android:hint="@string/no_requirements_available"
        android:text="These are the requirements we need in our charity,\n\n1. FOOD\nRice - 20kg\nDaal - 40kg\nWheat - 20kg\nOil - 1 Litre 20Bottle\n\n2. Clothes\nShirt - For 20 People\nPant - For 20 People\n\n3. Basic Things\nShampoo, Hair Oil, Bulb, LED\n\nThank You So Much"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="#500B0B"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.354"
        tools:ignore="MissingConstraints,RtlCompat" />

    <Button
        android:id="@+id/requirement_request_button_donor"
        android:layout_width="273dp"
        android:layout_height="57dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="88dp"
        android:backgroundTint="#7B1FA2"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="@string/request_to_charity"
        android:textAlignment="center"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/requirement_charity"
        app:layout_constraintVertical_bias="0.215" />

    <Button
        android:id="@+id/post_chairty_display"
        android:layout_width="265dp"
        android:layout_height="59dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#73770D"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="See Charity Post"
        android:textAlignment="center"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/requirement_charity"
        app:layout_constraintVertical_bias="0.215" />

    <View
        android:id="@+id/divider4"
        android:layout_width="467dp"
        android:layout_height="5dp"
        android:backgroundTint="#AF4040"
        android:backgroundTintMode="multiply"
        app:layout_constraintBottom_toTopOf="@+id/requirement_charity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>





