<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BaseActivity">


    <TextView
        android:id="@+id/donor"
        android:layout_width="171dp"
        android:layout_height="40dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/krona_one"
        android:gravity="center"
        android:text="DONOR"
        android:textAllCaps="true"
        android:textColor="#52489C"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/or"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/donor_base_lottie"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/charity"
        android:layout_width="171dp"
        android:layout_height="40dp"
        android:fontFamily="@font/krona_one"
        android:gravity="center"
        android:text="CHARITY"
        android:textAllCaps="true"
        android:textColor="#52489C"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/charity_base_lottie"
        app:layout_constraintStart_toStartOf="@+id/charity_base_lottie"
        app:layout_constraintTop_toBottomOf="@+id/charity_base_lottie"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/post_requirements2"
        android:layout_width="171dp"
        android:layout_height="54dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/krona_one"
        android:gravity="center"
        android:text="@string/post_requirements"
        android:textAllCaps="true"
        android:textColor="#52489C"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/or"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/charity_base_lottie" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/donor_base_lottie"
        android:layout_width="171dp"
        android:layout_height="176dp"
        android:layout_marginTop="6dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/or"
        app:layout_constraintEnd_toEndOf="@+id/donor"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/donor"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.0"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/donor_base_file" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/charity_base_lottie"
        android:layout_width="171dp"
        android:layout_height="176dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/or"
        app:layout_constraintVertical_bias="0.129"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/charity_base_file" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:fontFamily="@font/krona_one"
        android:text="Login as a"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#52489C"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintVertical_bias="0.031" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="cursive"
        android:text="@string/feeding_india"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#52489C"
        android:textSize="60dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.115" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="cursive"
        android:text="Welcome TO"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#52489C"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.072" />

    <TextView
        android:id="@+id/or"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:fontFamily="@font/krona_one"
        android:text="or"
        android:textAllCaps="false"
        android:textColor="#52489C"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.593" />

    <androidx.cardview.widget.CardView
        android:layout_width="170dp"
        android:layout_height="217dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.017"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardElevation="1dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="170dp"
        android:layout_height="217dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.823"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardElevation="1dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>