<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".charity.SelectionPostRequirementActivityCharity"
    android:background="#FFFFFF">

    <include
        android:id="@+id/post_requirements_page_toolbar"
        layout="@layout/app_bar_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/selection_requirements_pic"
        android:layout_width="296dp"
        android:layout_height="226dp"
        android:layout_marginTop="16dp"
        android:background="#FFFFFF"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/selection_requirements_lottie" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/selection_posts_pic"
        android:layout_width="296dp"
        android:layout_height="226dp"
        android:layout_marginTop="16dp"
        android:background="#FFFFFF"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/selection_posts_lottie" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="219dp"
        android:layout_height="36dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/krona_one"
        android:text="select"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#52489C"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/post_requirements_page_toolbar" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="325dp"
        android:layout_height="42dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/buttons2"
        android:paddingTop="4sp"
        android:text="@string/charity_requirements"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="@+id/selection_requirements_pic"
        app:layout_constraintStart_toStartOf="@+id/selection_requirements_pic"
        app:layout_constraintTop_toBottomOf="@+id/selection_requirements_pic" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="325dp"
        android:layout_height="42dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/buttons2"
        android:paddingTop="4sp"
        android:text="@string/charity_posts"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selection_posts_pic" />


</androidx.constraintlayout.widget.ConstraintLayout>